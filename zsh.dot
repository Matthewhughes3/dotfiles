export EDITOR=vi
export PATH=$PATH:~/bin
bindkey -v
#export KEYTIMEOUT=1

zstyle ':completion:*' menu select
zstyle ':completion::complete:*' gain-privileges 1

magic-enter () {
        if [[ -z $BUFFER ]]
        then
                zle clear-screen
        else
                zle accept-line
        fi
}

zle -N magic-enter

autoload -U compinit
compinit

alias gs="git status"
alias c="cd"
alias l="ls"
alias tt="tmuxp load"
alias t="tmux"
alias ta="tmux a -t $1"
alias re="source ~/.zshrc"
alias m="meteor"
alias mm="meteor mongo"
bindkey "^M" magic-enter
alias dotz="vim ~/dotfiles/zsh.dot"
alias dotv="vim ~/dotfiles/vim.dot"
alias doti="vim ~/dotfiles/i3.dot"
alias dott="vim ~/dotfiles/tmux.dot"
alias d="ranger ."
alias twj="cd ~/projects/Thrive-With-Jive; tt ."
alias text="cd ~/projects/Thrive-Extensions/chrome/add_leads; tt ."
alias mkos="cd ~/projects/MKOS; tt ."

setopt COMPLETE_ALIASES

function get_pwd() {
	echo "${PWD/$HOME/~}"
}

